<h2>Product List</h2> 
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>description</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    {{#each products}}
      <tr>
        <td>{{this.name}}</td>
        <td><img class="img" style="width:20%" src="{{this.image}}" alt="{{this.name}}"></td>
        <td>{{this.price}}</td>
        <td>{{this.description}}</td>
        <td><a href="" class="btn btn-primary ">Update</a></td>
        <td><button type="submit" class="btn btn-primary ">Delete</button></td>
      </tr>
    {{/each}}
    </tbody>
  </table>